<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="language_po_update_wizard_form" model="ir.ui.view">
        <field name="name">Language PO Update Wizard Form</field>
        <field name="model">language.po.update.wizard</field>
        <field name="arch" type="xml">
            <form string="Update PO Files">
                <sheet>
                    <group>
                        <field
              name="modules"
              widget="many2many_tags"
              options="{'no_create': True}"
            />
                        <field
              name="languages"
              widget="many2many_tags"
              options="{'no_create': True}"
            />
                    </group>
                </sheet>
                <footer>
                    <button
            name="action_update_multi_po_files"
            string="Update Multiple PO Files"
            type="object"
            class="btn-primary"
            data-hotkey="c"
          />
                    <button
            special="cancel"
            string="Cancel"
            type="object"
            class="btn-secondary"
            data-hotkey="q"
          />
                </footer>
            </form>
        </field>
    </record>

    <record id="action_wizard_lang_export_multi" model="ir.actions.act_window">
        <field name="name">Export Multiple Translations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">language.po.update.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="language_po_update_wizard_form" />
    </record>
    <menuitem
    action="action_wizard_lang_export_multi"
    id="menu_wizard_lang_export_multi"
    parent="base.menu_translation_export"
  />
</odoo>
