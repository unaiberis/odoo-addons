<odoo>
    <data>
        <record id="wiz_run_stock_scheduler_view_form" model="ir.ui.view">
            <field name="model">wiz.run.stock.scheduler</field>
            <field name="arch" type="xml">
                <form string="Run manually scheduled for selected reordering rules">
                    <group>
                        <field name="use_new_cursor" required="True" colspan="4" />
                    </group>
                    <footer>
                        <button
              string="Run scheduler"
              name="button_run_stock_scheduler"
              type="object"
              default_focus="1"
              class="btn-primary"
            />
                        <button
              string="Cancel"
              class="btn-secondary"
              special="cancel"
            />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_wiz_hr_attendance_anomaly" model="ir.actions.act_window">
            <field name="name">Run manually scheduler</field>
            <field name="res_model">wiz.run.stock.scheduler</field>
            <field name="binding_model_id" ref="stock.model_stock_warehouse_orderpoint" />
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" ref="stock_run_scheduler_manually.wiz_run_stock_scheduler_view_form"/>
        </record>
    </data>
</odoo>
